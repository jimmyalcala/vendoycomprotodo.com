.categoria
  border  1px solid #ddd
  margin 1px
  padding 2px;
  min-height 28px

.manejoCategorias
  min-height 40px

.btn {
    margin-right: 8px;
}

.angular-ui-tree-handle
    background: #f8faff;
    border: 1px solid #dae2ea;
    color: asbesto;
    padding: 10px 10px;
    cursor default

  a
    color:asbesto

  a:hover
    color:black
    cursor:pointer

.angular-ui-tree-handle:hover
    color: black;
    background: #f4f6f7;
    border-color: #dce2e8;
    cursor default




.angular-ui-tree-placeholder {
    background: #f0f9ff;
    border: 2px dashed #bed2db;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}


.group-title {
    background-color: #687074 !important;
    color: #FFF !important;
}
