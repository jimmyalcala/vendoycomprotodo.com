.cuadroCategoria
  background-color: #DCE2E3
  height 150px
  margin 5px
  text-align center
  width 150px
  border 1px solid #ddd

.breadcrumb
  background-color: #DCE2E3

.cuadroCategoria.ng-enter
  -webkit-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
  -moz-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
  -ms-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
  -o-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
  transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;

.categorias .seleccionado
  font-family:"museo700", Helvetica, Arial, sans-serif;
  font-size:24px;
  margin-top:50px;

.cuadroCategoria.ng-enter,.seleccionado.ng-enter
  top: -100%;

.cuadroCategoria.ng-leave
  top: 0%;

.cuadroCategoria.ng-leave-active
  top: 100%;


.cuadroCategoria.ng-enter-active,.seleccionado.ng-enter-active {
  top: 0%;
}

